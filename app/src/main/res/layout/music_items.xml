<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/audio_item"
    android:background="#bcaaa4">

    <LinearLayout
        android:id="@+id/item_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/music_img"
            android:src="@drawable/baseline_music_note_white_36"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/music_file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/music_img"
            android:text="File Name"
            android:textColor="#ffffff"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/music_img"
            android:textAlignment="center"
            android:layout_gravity="center"/>

    </LinearLayout>

    <View
        android:id="@+id/hr1"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#444"
        android:layout_alignBottom="@id/item_linearLayout"
        />

</RelativeLayout>